#include <iostream>
using namespace std;
int main()
{

    /*
    Pattern 17-
    A
   ABC
  ABCDC
 ABCDEDC
ABCDEFEDC
    */
    int n, i, j;
    cout << "Enter  N: ";
    cin >> n;

    for (i = 0; i < n; i++)
    {
        char ch = 'A';

        // spaces
        for (j = 0; j < n - 1 - i; j++)
        {
            cout << " ";
        }

        // character
        int breakpoint = (2 * i + 1) / 2;
        for (j = 0; j < 2 * i + 1; j++)
        {
            cout << ch;
            if (j <= breakpoint)
                ch++;
            else
                ch--;
        }
        // spaces
        for (j = 0; j < n - 1 - i; j++)
        {
            cout << " ";
        }
        cout << endl;
    }
    return 0;
}
